<h1>Pyramide 3D Transparente</h1>

<div class="pyramid-container">
  <div class="pyramid">
    <div class="base"></div>
    <div class="face face1"></div>
    <div class="face face2"></div>
    <div class="face face3"></div>
    <div class="face face4"></div>
  </div>
</div>
/* Pyramid Container */
.pyramid-container {
  width: 200px;
  height: 200px;
  perspective: 800px;
  margin-top: 3rem;
}

.pyramid {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  animation: rotatePyramid 20s linear infinite;
}

/* Base (carrée) */
.pyramid .base {
  position: absolute;
  width: 100%;
  height: 100%;
  background: var(--cube-veil);
  border: 2px solid var(--primary-color);
  backdrop-filter: blur(2px);
  border-radius: var(--border-radius);
  transform: rotateX(90deg) translateZ(-100px);
}

/* Triangles */
.pyramid .face {
  position: absolute;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 100px 173.2px 100px; /* équilatéral approx */
  background: transparent;
  border-bottom-color: var(--cube-veil);
  backdrop-filter: blur(2px);
}

/* Couleurs des faces */
.face1 { border-bottom-color: var(--primary-color); transform: rotateY(0deg) translateZ(100px) rotateX(60deg); }
.face2 { border-bottom-color: var(--secondary-color); transform: rotateY(90deg) translateZ(100px) rotateX(60deg); }
.face3 { border-bottom-color: var(--accent-color-1); transform: rotateY(180deg) translateZ(100px) rotateX(60deg); }
.face4 { border-bottom-color: var(--accent-color-2); transform: rotateY(-90deg) translateZ(100px) rotateX(60deg); }

@keyframes rotatePyramid {
  0%   { transform: rotateX(-20deg) rotateY(0deg); }
  100% { transform: rotateX(-20deg) rotateY(360deg); }
}

/* Pause au survol */
.pyramid:hover {
  animation-play-state: paused;
  cursor: grab;
}
